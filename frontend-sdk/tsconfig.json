{
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noResolve": false,
    "declaration": true,
    "diagnostics": true,
    "outDir": "./dist",
    "lib":["ES2015", "ES2016", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
  }
}
